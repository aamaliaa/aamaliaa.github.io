header, footer
  font-family: $font-header
  font-weight: bold
  font-size: 0.8em
  text-transform: uppercase
  padding: 0.5rem 0

  a
    color: $text-color

    &:last-child
      padding-right: 0

header
  border-bottom: 2px solid $hr-color
  margin-bottom: 2rem

  .links
    float: right
    
    a
      padding-left: 1rem

  .triangles
    height: 0.8em

footer
  border-top: 2px solid $hr-color
  margin-top: 2rem
  padding-bottom: 25px
  flex-shrink: 0