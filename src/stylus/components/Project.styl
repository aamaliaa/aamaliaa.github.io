.project
  margin: 0 auto
  max-width: 800px
  width: 100%

  h4
    clearfix()

  img
    display: block
    margin: 0 auto
    max-width: 100%

    &.pull-right
      max-width: 48%
      padding: 9px 1rem 1rem 1rem
      float: right

    &.pull-left
      max-width: 48%
      padding: 9px 1.5rem 1rem 0
      float: left

  .media
    float: right

  iframe
    width: 100%
    border: 0

  .instagram-media
    margin-left: auto !important
    margin-right: auto !important

.project-site
  float: right

.hero
  height: 500px
  width: 100%
  background-size: cover
  background-position: 50% 50%

  @media $small-screen
    height: 300px
